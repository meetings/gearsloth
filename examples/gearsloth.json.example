{
  "README": [
    "Example configuration for a simple setup with sqlite",
    "database and single Gearman job server.",
    "",
    "All dbopt keys are optional and their defaults values",
    "are marked below.",
    "",
    "For the job server configuration, replace all <...>",
    "with correct values.",
    "",
    "This configuration file MUST be valid json data.",
    "See http://json.org for details."
  ],

  "db": "sqlite",

  "dbopt": {
    "domain":          "$HOSTNAME",
    "table_name":      "DelayedTasks",
    "database_file":   "/var/lib/gearsloth/tasks.sqlite",
    "poll_interval":   "333"
  },

  "servers": [{
    "host": "<addr>",
    "port": "<port>"
  }]
}
